<!DOCTYPE html>
<html>
<head>
	<% include ../tv/partials/head.ejs %>
</head>
<body>

	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Review for <%=show.title%></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item active">
        <a class="nav-link icon" href="/">Home <span class="sr-only"></span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link icon" href="/movie">Movie Reviews</a>
      </li>
      <li class="nav-item">
        <a class="nav-link icon" href="/tv">TV Reviews</a>
      </li>
       <li class="nav-item">
        <a class="nav-link icon" href="/account">Create Account</a>
      </li>
       <li class="nav-item">
        <a class="nav-link icon" href="/login">Login</a>
      </li>
    </ul>
  </div>
</nav>
	</header>

	<main>
		<section class="d-flex justify-content-center">
      <div class="card border-dark bg-secondary" style="width: 25rem;">
        <img class="card-img-top" name="imageLink" src="<%= show.imageLink %>" alt="Card image cap">
        <div class="card-block">
          <video
          id="vid1"
          class="video-js vjs-default-skin"
          width="398" height="264"
          data-setup='{ "controls": true, "autoplay": false, "preload": true, "techOrder": ["youtube"], "sources": [{ "type": "video/youtube", "src": "<%= show.videoLink %>"}], "youtube": { "ytControls": 0} }'

          >
          </video>
        </div>
        <div class="card-body">
          <h4 class="card-title" name="title">
    <%       let totalRatings = 0;%>
    <%   for (let i=0; i < show.reviews.length; i++) {%>
    <%    totalRatings += show.reviews[i].rating%>
    <%   }%>
    <% let starRating = Math.round(totalRatings/ show.reviews.length*5)/5%>
    <% let averageRating = Math.round((totalRatings/ show.reviews.length*2)*100)/10%>
    <% if(isNaN(averageRating)){%>
          <%=averageRating = "No Reviews Yet"%><br>
    <% }else{%>
          <%=starRating%>/5<br>
          <div class="star-ratings-sprite"><span style="width:<%=averageRating%>%" class="star-ratings-sprite-rating"></span></div><br>
    <% }%>
          <%= show.title %></h4>
          <p class="card-text" name="description"><%= show.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Reviews</li>
          <%show.reviews.forEach((reviews)=>{%>
          <li class="list-group-item">
            <%let userReviewRating = ((reviews.rating*2)*100)/10%> %>
            <div class="star-ratings-sprite"><span style="width:<%=userReviewRating%>%" class="star-ratings-sprite-rating"></span></div><br>
            <%=reviews.body%><br>
          </li>
          <% })%>
        </ul>
        <div class="card-body">
          <% if (logged) { %>
          <form action="/tv/create" method="POST">
            <div class='container-stars' id='rating-stars'>
             <fieldset class="rating">
            <legend>Please rate:</legend>
              <input type="radio" id="star5" name="rating" value="5" /><label for="star5" title="Rocks!">5 stars</label>
              <input type="radio" id="star4" name="rating" value="4" /><label for="star4" title="Pretty good">4 stars</label>
              <input type="radio" id="star3" name="rating" value="3" /><label for="star3" title="Meh">3 stars</label>
              <input type="radio" id="star2" name="rating" value="2" /><label for="star2" title="Kinda bad">2 stars</label>
              <input type="radio" id="star1" name="rating" value="1" /><label for="star1" title="Sucks big time">1 star</label>
            </fieldset>
          </div>
              <input type="hidden" name="titleId" value="<%=show._id%>">
              <textarea name="body">Create a review</textarea><br>
              <button type="submit">Submit</button>
        </form>
          <a href="/tv/<%= show._id %>/edit" >Update</a><br>
          <a href="/tv/<%= show._id %>?_method=DELETE"" >Delete</a><br>
          <% } %>
        </div>
      </div>	
		</section>
	</main>
<canvas id="canvas-radial"></canvas>

<script src="../node_modules/video.js/dist/video.min.js"></script>
<script src="../dist/Youtube.min.js"></script>
<script src="/javascripts/app.js"></script>

</body>
</html>